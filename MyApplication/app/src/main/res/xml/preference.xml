<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Map">
        <EditTextPreference
            android:defaultValue="2000"
            android:dialogTitle="Choisissez le rayon de recherche"
            android:key="rayon"
            android:negativeButtonText="Annuler"
            android:positiveButtonText="OK"
            android:title="Rayon de recherche" />
        <ListPreference
            android:dialogTitle="Choisissez le type de lieu"
            android:entries="@array/liste_type"
            android:entryValues="@array/liste_type"
            android:key="types"
            android:negativeButtonText="Annuler"
            android:title="Types de lieu" />
        <ListPreference
            android:dialogTitle="Choisissez le type de carte"
            android:entries="@array/liste_type_carte"
            android:entryValues="@array/liste_type_carte"
            android:key="types_carte"
            android:negativeButtonText="Annuler"
            android:title="Types de carte" />
    </PreferenceCategory>

</PreferenceScreen>